cursor-scroll = ns-resize

[module/spotify]
type = custom/script
interval = 1
format-prefix = "ğŸµ "
format = <label>
exec = python $HOME/.config/spotifyScript/spotify_status.py -f '{artist}: {song}'
format-underline = ${colors.palette1} 

[module/powermenu]
